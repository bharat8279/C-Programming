
/* A
   B  B
   A  A  A
   B  B  B  B
   A  A  A  A
*/ 



#include<stdio.h>
   int main()
   {
   	int n,i,j;
   	printf("Enter the number of rows");
   	scanf("%d",&n);
   	for(i=1;i<=n;i++)
   	{
   		for(j=1;j<=i;j++)
   		{
   			if(i%2==0)
   			printf("B ");
   			else
   			printf("A ");
		   }
		   printf("\n");
	   }
   }
